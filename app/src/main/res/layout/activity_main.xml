<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CustomLayout"
    tools:context=".MainActivity">

    <TextView
        style="@style/CustomTextView"
        android:id="@+id/mainTitle"
        android:text="@string/main_title" />

    <Button
        style="@style/CustomButton"
        android:layout_below="@+id/mainTitle"
        android:id="@+id/buttonSpotify"
        android:text="@string/spotify_app_name"
        android:onClick="launchSpotifyApp" />

    <Button
        style="@style/CustomButton"
        android:layout_below="@+id/buttonSpotify"
        android:id="@+id/buttonScores"
        android:text="@string/scores_app_name"
        android:onClick="launchScoresApp" />

    <Button
        style="@style/CustomButton"
        android:layout_below="@+id/buttonScores"
        android:id="@+id/buttonLibrary"
        android:text="@string/library_app_name"
        android:onClick="launchLibraryApp" />

    <Button
        style="@style/CustomButton"
        android:layout_below="@+id/buttonLibrary"
        android:id="@+id/buttonBuildItBigger"
        android:text="@string/build_it_bigger_app_name"
        android:onClick="launchBuildItBiggerApp" />

    <Button
        style="@style/CustomButton"
        android:layout_below="@+id/buttonBuildItBigger"
        android:id="@+id/buttonXYZ"
        android:text="@string/xyz_reader_app_name"
        android:onClick="launchXYZReaderApp" />

    <Button
        style="@style/CustomButton.Orange"
        android:layout_below="@+id/buttonXYZ"
        android:id="@+id/buttonCapstone"
        android:text="@string/capstone_app_name"
        android:onClick="launchCapstoneApp" />

</RelativeLayout>
